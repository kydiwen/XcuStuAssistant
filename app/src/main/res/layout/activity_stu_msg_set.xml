<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent">
    <include
        layout="@layout/top_back"></include>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:textSize="@dimen/medium"
        android:text="请输入姓名和学号"></TextView>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/error_color"></View>
    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:textColor="@color/error_color"
        android:hint="请输入姓名"></EditText>
    <EditText
        android:id="@+id/num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:textSize="@dimen/medium"
        android:textColor="@color/error_color"
        android:inputType="number"
        android:hint="请输入学号"></EditText>
    <EditText
        android:id="@+id/class_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:textSize="@dimen/medium"
        android:textColor="@color/error_color"
        android:hint="请输入课程（用来保存签到记录）"></EditText>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/open_bluetooth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@drawable/enter_main_btn_selector"
            android:textSize="@dimen/medium"
            android:text="开启扫描"
            android:layout_marginRight="10dp"
            android:clickable="true"
            android:gravity="center"></Button>
        <Button
            android:id="@+id/scan_success"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="签到成功"
            android:layout_marginLeft="10dp"
            android:textSize="@dimen/medium"
            android:padding="10dp"
            android:background="@drawable/enter_main_btn_selector"></Button>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/error_color"></View>
</LinearLayout>
