<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include
        layout="@layout/top_back"></include>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:text="请输入姓名和学号"
        android:textSize="@dimen/medium"></TextView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/error_color"></View>

    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入姓名"
        android:padding="15dp"
        android:textColor="@color/error_color"></EditText>

    <EditText
        android:id="@+id/num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入学号"
        android:inputType="number"
        android:padding="15dp"
        android:textColor="@color/error_color"
        android:textSize="@dimen/medium"></EditText>

    <EditText
        android:id="@+id/class_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入课程（用来保存签到记录）"
        android:padding="15dp"
        android:textColor="@color/error_color"
        android:textSize="@dimen/medium"></EditText>

    <EditText
        android:id="@+id/command"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入口令"
        android:inputType="text"
        android:padding="15dp"
        android:textColor="@color/error_color"
        android:textSize="@dimen/medium"></EditText>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:padding="10dp">

        <Button
            android:id="@+id/open_bluetooth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:background="@drawable/enter_main_btn_selector"
            android:clickable="true"
            android:gravity="center"
            android:padding="10dp"
            android:text="开启扫描"
            android:textSize="@dimen/medium"></Button>

        <Button
            android:id="@+id/scan_success"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/enter_main_btn_selector"
            android:padding="10dp"
            android:text="签到成功"
            android:textSize="@dimen/medium"></Button>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/error_color"></View>
</LinearLayout>
