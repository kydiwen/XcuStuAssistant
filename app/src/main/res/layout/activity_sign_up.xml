<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include
        layout="@layout/top_back"></include>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">
        <EditText
            android:id="@+id/username"
           style="@style/signup_input_stype"
            android:hint="请输入用户名"></EditText>
        <EditText
            android:id="@+id/password"
            android:inputType="textPassword"
            style="@style/signup_input_stype"
            android:hint="请输入密码（不少于6位）"></EditText>
        <EditText
            android:id="@+id/password_again"
            android:inputType="textPassword"
            style="@style/signup_input_stype"
            android:hint="请再次输入密码"></EditText>
        <EditText
            android:inputType="phone"
            android:id="@+id/phone_number"
            style="@style/signup_input_stype"
            android:hint="请输入手机号"></EditText>
        <EditText
            android:inputType="number"
            android:id="@+id/qqnumber"
            style="@style/signup_input_stype"
            android:hint="请输入QQ号码"></EditText>
        <TextView
            android:id="@+id/ensure"
            style="@style/signup_input_stype"
            android:text="确定"
            android:background="@color/main_color"
            android:gravity="center"
            android:padding="10dp"></TextView>
    </LinearLayout>
</LinearLayout>
