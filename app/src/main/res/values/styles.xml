<resources>
    <!--主页面底部状态栏样式-->
    <style name="main_bottom">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">3dp</item>
        <item name="android:textColor">@drawable/main_color_selector</item>
    </style>
    <!--天气详情页面天气舒适度样式-->
    <style name="weatherdetail_comfort">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@color/main_nomal</item>
        <item name="android:textSize">@dimen/medium</item>
    </style>
    <!--未来三天天气样式-->
    <style name="furture_weather">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
    </style>
    <!--新闻中心标题栏导航条样式-->
    <style name="newscenter_lin">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/news_more_bg</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <!--新闻中心导航条标题样式-->
    <style name="newscenter_title">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textSize">@dimen/big</item>
    </style>
    <!--新闻中心，查看更多图片样式-->
    <style name="newscenter_img_more">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/newscenter_lookmore_selector</item>
    </style>
    <!--新闻中心新闻列表样式-->
    <style name="newscenter_list">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
</resources>
